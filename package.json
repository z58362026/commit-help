{
    "name": "commit-helper",
    "displayName": "commit-helper",
    "description": "gitlab and zentao is bridge",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "commit-helper.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "commit-helper.showVisualList",
                "title": "Show ZenTao Visual List"
            }
        ],
        "keybindings": [
            {
                "command": "commit-helper.showVisualList",
                "key": "ctrl+alt+c",
                "mac": "cmd+alt+c",
                "when": "config.commit-helper.enableHelloShortcut"
            }
        ],
        "configuration": {
            "title": "commit-helper",
            "properties": {
                "commit-helper.enableHelloShortcut": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Ctrl+Alt+C to trigger show visual list."
                },
                "commit-helper.routes": {
                    "type": "object",
                    "default": {
                        "baseUrl": "https://rizentao.gientech.com/api.php/v1",
                        "tokens": "/tokens",
                        "user": "/user",
                        "projects": "/projects",
                        "products": "/products",
                        "stories": "/projects/{id}/stories",
                        "bugs": "/products/{id}/bugs"
                    },
                    "description": "ZenTao API routes configuration"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "commit-helper-view-container",
                    "title": "Commit Helper",
                    "icon": "./src/resources/icon1.svg"
                }
            ]
        },
        "views": {
            "commit-helper-view-container": [
                {
                    "type": "tree",
                    "id": "commit-helper.visualList",
                    "name": "ZenTao Visual List"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.102.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.16.0"
    },
    "dependencies": {
        "axios": "^1.11.0"
    },
    "activationEvents": [
        "*"
    ]
}
