{
    "name": "commit-helper",
    "displayName": "commit-helper",
    "description": "gitlab and zentao is bridge",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "commit-helper.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "commit-helper.showVisualList",
                "title": "Show ZenTao Visual List"
            },
            {
                "command": "commit-helper.submitCommit",
                "title": "Submit Commit (ZenTao)"
            },
            {
                "command": "commit-helper.copyToClipboard",
                "title": "Copy ZenTao Info to Clipboard"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.102.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.16.0"
    },
    "dependencies": {
        "axios": "^1.11.0"
    }
}
